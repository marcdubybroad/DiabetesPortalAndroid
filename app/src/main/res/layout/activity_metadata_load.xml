<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.wintersoldier.diabetesportal.MetadataLoadActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_metadata_load_action"
        android:id="@+id/button_load_metadata_action"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/header_metadata_load_results"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/button_load_metadata_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/metadata_load_header" />

    <TextView
        android:text="@string/header_metadata_load_status"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/metadata_load_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/metadata_load_status" />

    <TextView
        android:text="@string/text_metadata_load_default"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/metadata_load_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/metadata_load_results"/>

</RelativeLayout>
